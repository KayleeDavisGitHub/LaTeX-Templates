%passes optional options to other packages

\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections=#1}{beamerouterthemesidebar}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections=#1}{beamerouterthemesidebar}}

\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemesidebar}}
\DeclareOptionBeamer{left}{\PassOptionsToPackage{left}{beamerouterthemesidebar}}
\DeclareOptionBeamer{right}{\PassOptionsToPackage{right}{beamerouterthemesidebar}}


\ProcessOptionsBeamer

\mode<presentation>

\usecolortheme{mule} %use the mule colour theme

\useoutertheme{sidebar} %put a sidebar
\useinnertheme{rounded}	%makes round boxes
\useinnertheme{circles} %uses circles for bullets


\setbeamertemplate{footline}[frame number]{} %sets frame numbers in the footer
\setbeamertemplate{navigation symbols}{} %hides navigation symbols

\setbeamerfont{title}{size=\Huge,series=\bfseries}
\setbeamerfont{author}{size=\Large}
\setbeamercolor*{frametitle}{parent=palette primary}
\setbeamerfont{block title}{size={},series=\bfseries}

\setbeamertemplate{frametitle} %sets the look of the title on each frame
{
\begin{flushleft}	%left align title
\textbf{\underline{\insertframetitle}}	% underline title
\par
\end{flushleft}
}


\setbeamerfont{section number projected}{family=\rmfamily,series=\bfseries,size=\scriptsize}


\setbeamertemplate{bibliography item}[triangle] %sets triangles for bibliography bullets

\setbeamerfont{date in head/foot}{size=\tiny} %sets date to look small if needed


\mode<all>


